{
  "paths": {
    "/api/experience/secret/user": {
      "put": {
        "operationId": "putExperienceSecretUser",
        "tags": ["Experience secret"],
        "summary": "Store user's encrypted secret",
        "description": "Store the user's encrypted secret for zero-knowledge encryption. This endpoint updates the user record with the encrypted secret.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "encryptedSecret": {
                    "type": "string",
                    "description": "The encrypted secret to store for the user"
                  }
                },
                "required": ["encryptedSecret"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Secret stored successfully"
          },
          "400": {
            "description": "Bad request - invalid input"
          },
          "401": {
            "description": "Unauthorized - user not identified in current interaction"
          }
        }
      }
    },
    "/api/experience/secret/session": {
      "put": {
        "operationId": "putExperienceSecretSession",
        "tags": ["Experience secret"],
        "summary": "Store session's encrypted client secret",
        "description": "Store the encrypted client secret in the current experience interaction session. This will be persisted to the OIDC session when the interaction is submitted.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "encryptedClientSecret": {
                    "type": "string",
                    "description": "The encrypted client secret to store in the session"
                  }
                },
                "required": ["encryptedClientSecret"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Client secret stored successfully"
          },
          "400": {
            "description": "Bad request - invalid input"
          }
        }
      },
      "get": {
        "operationId": "getExperienceSecretSession",
        "tags": ["Experience secret"],
        "summary": "Get session's encrypted client secret",
        "description": "Retrieve the encrypted client secret from the current experience interaction session.",
        "responses": {
          "200": {
            "description": "Client secret retrieved successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "encryptedClientSecret": {
                      "type": "string",
                      "nullable": true,
                      "description": "The encrypted client secret, or null if not set"
                    }
                  },
                  "required": ["encryptedClientSecret"]
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - invalid session"
          }
        }
      }
    }
  }
}
