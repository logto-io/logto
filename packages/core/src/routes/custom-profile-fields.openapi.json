{
  "tags": [
    {
      "name": "Custom profile fields",
      "description": "An admin feature used to create a customized user profile form, which is used to collect additional user information upon successful registrations."
    },
    {
      "name": "Dev feature"
    }
  ],
  "paths": {
    "/api/custom-profile-fields": {
      "get": {
        "summary": "Get all custom profile fields",
        "description": "Get all custom profile fields.",
        "responses": {
          "200": {
            "description": "Custom profile fields ordered by sieOrder (Sign-in Experience order)."
          }
        }
      },
      "post": {
        "summary": "Create a custom profile field",
        "description": "Create a custom profile field.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "type": {
                    "type": "string"
                  },
                  "label": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  },
                  "required": {
                    "type": "boolean"
                  },
                  "config": {
                    "type": "object",
                    "properties": {
                      "placeholder": {
                        "type": "string"
                      },
                      "minLength": {
                        "type": "integer"
                      },
                      "maxLength": {
                        "type": "integer"
                      },
                      "minValue": {
                        "type": "integer"
                      },
                      "maxValue": {
                        "type": "integer"
                      },
                      "format": {
                        "type": "string"
                      },
                      "options": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "label": {
                              "type": "string"
                            },
                            "value": {
                              "type": "string"
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/custom-profile-fields/{id}": {
      "get": {
        "summary": "Get a custom profile field by id",
        "description": "Get a custom profile field by id.",
        "responses": {
          "200": {
            "description": "Custom profile field found successfully."
          }
        }
      },
      "patch": {
        "summary": "Update a custom profile field by id",
        "description": "Update a custom profile field by id.",
        "responses": {
          "200": {
            "description": "Custom profile field updated successfully."
          }
        }
      },
      "delete": {
        "summary": "Delete a custom profile field by id",
        "description": "Delete a custom profile field by id.",
        "responses": {
          "204": {
            "description": "Custom profile field deleted successfully."
          }
        }
      }
    },
    "/api/custom-profile-fields/sie-order": {
      "put": {
        "summary": "Update the display order of the custom profile fields in Sign-in Experience.",
        "description": "Update the display order of the custom profile fields in Sign-in Experience.",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "order": {
                    "type": "array",
                    "items": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "string"
                        },
                        "sieOrder": {
                          "type": "integer"
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Custom profile fields updated successfully."
          }
        }
      }
    }
  }
}
