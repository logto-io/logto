{
  "parser": "@typescript-eslint/parser",
  "extends": [
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module"
  },
  "rules": {
    "no-redeclare": "off",
    "no-unused-vars": "off"
  },
  "env": {
    "browser": true,
    "node": true
  },
  "ignorePatterns": ["dist"]
}
